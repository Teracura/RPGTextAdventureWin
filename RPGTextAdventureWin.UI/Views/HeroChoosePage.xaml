<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGTextAdventureWin.Views.HeroChoosePage">
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Choose an option"
                HorizontalOptions="Center"
                FontSize="24"
                Margin="0,20,0,10" />

            <!-- Grid for the two buttons that split the page in half horizontally -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button
                    Grid.Column="0"
                    Text="Start A new game"
                    Clicked="OnStartNewSaveClick"
                    HorizontalOptions="Fill" />
                <Button
                    Grid.Column="1"
                    Text="Continue game"
                    Clicked="OnContinueSaveClick"
                    HorizontalOptions="Fill" />
            </Grid>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>